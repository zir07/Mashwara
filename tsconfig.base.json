{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@mashwara/source"],
    "paths": {
      "@mashwara/types": ["libs/types/src/index.ts"],
      "@mashwara/ui": ["libs/ui/src/index.ts"],
      "@mashwara/validation": ["libs/validation/src/index.ts"]
    }
  }
}
